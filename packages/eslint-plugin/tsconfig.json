{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES2023"],
    "module": "node16",
    "moduleResolution": "Node16",
    "outDir": ".build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["**/*.d.ts", "**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": [".build", "node_modules"]
}
